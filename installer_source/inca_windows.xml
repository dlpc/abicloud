<project>
    <shortName>abicloud</shortName>
    <fullName>AbiCloud</fullName>
    <version>0.6.0</version>
    <licenseFile>licence</licenseFile>
    <leftImage>../../abicloud/installer_source/CustomPreloaderLogo.png</leftImage>
    <logoImage>../../abicloud/installer_source/CustomPreloaderLogo.png</logoImage>
    <showPostInstallationScriptResult>1</showPostInstallationScriptResult>
    <preInstallationActionList>
        <autodetectJava>
            <promptUser>0</promptUser>
        </autodetectJava>
    </preInstallationActionList>
    <postInstallationActionList>
        <substitute>
            <files>${installdir}/template/server-windows.xml</files>
            <type>regexp</type>
            <substitutionList>
                <substitution>
                    <pattern>##tomcatPort##</pattern>
                    <value>${tomcatPort}</value>
                </substitution>
            </substitutionList>
        </substitute>
        <substitute>
            <files>${installdir}/template/tomcat-users-windows.xml</files>
            <type>regexp</type>
            <substitutionList>
                <substitution>
                    <pattern>##tomcatUser##</pattern>
                    <value>${tomcatUser}</value>
                </substitution>
                <substitution>
                    <pattern>##tomcatPassword##</pattern>
                    <value>${tomcatPassword}</value>
                </substitution>
            </substitutionList>
        </substitute>
        <substitute>
            <files>${installdir}/template/abi.config.xml</files>
            <type>regexp</type>
            <ruleList>
                <compareText>
                    <logic>equals</logic>
                    <text>${database}</text>
                    <value>none</value>
                </compareText>
                <compareText>
                    <logic>equals</logic>
                    <text>${database}</text>
                    <value>none</value>
                </compareText>
            </ruleList>
            <substitutionList>
                <substitution>
                    <pattern>##tomcatPort##</pattern>
                    <value>${tomcatPort}</value>
                </substitution>
                <substitution>
                    <pattern>##databaseHost##</pattern>
                    <value>${databaseHost}</value>
                </substitution>
                <substitution>
                    <pattern>##databasePort##</pattern>
                    <value>${databasePort}</value>
                </substitution>
                <substitution>
                    <pattern>##databaseUsername##</pattern>
                    <value>${databaseUsername}</value>
                </substitution>
                <substitution>
                    <pattern>##databasePassword##</pattern>
                    <value>${databasePassword}</value>
                </substitution>
                <substitution>
                    <pattern>##databaseName##</pattern>
                    <value>kinton</value>
                </substitution>
            </substitutionList>
        </substitute>
        <substitute>
            <files>${installdir}/template/abi.config.xml</files>
            <type>regexp</type>
            <ruleList>
                <compareText>
                    <logic>equals</logic>
                    <text>${database}</text>
                    <value>mysql</value>
                </compareText>
            </ruleList>
            <substitutionList>
                <substitution>
                    <pattern>##tomcatPort##</pattern>
                    <value>${tomcatPort}</value>
                </substitution>
                <substitution>
                    <pattern>##databaseHost##</pattern>
                    <value>localhost</value>
                </substitution>
                <substitution>
                    <pattern>##databasePort##</pattern>
                    <value>33060</value>
                </substitution>
                <substitution>
                    <pattern>##databaseUsername##</pattern>
                    <value>root</value>
                </substitution>
                <substitution>
                    <pattern>##databasePassword##</pattern>
                    <value></value>
                </substitution>
                <substitution>
                    <pattern>##databaseName##</pattern>
                    <value>kinton</value>
                </substitution>
            </substitutionList>
        </substitute>
        <substitute>
            <files>${installdir}/template/client-config.xml</files>
            <type>regexp</type>
            <substitutionList>
                <substitution>
                    <pattern>##tomcatPort##</pattern>
                    <value>${tomcatPort}</value>
                </substitution>
            </substitutionList>
        </substitute>
        <runProgram>
            <program>${installdir}\install_mysql.bat</program>
            <programArguments>"${installdir}"</programArguments>
            <ruleList>
                <compareText>
                    <logic>equals</logic>
                    <text>${database}</text>
                    <value>mysql</value>
                </compareText>
            </ruleList>
        </runProgram>
        <runProgram>
            <program>${installdir}\install_tomcat.bat</program>
            <programArguments>"${installdir}"</programArguments>
        </runProgram>
        <runProgram>
            <program>${installdir}\deploy_application.bat</program>
            <programArguments>"${installdir}"</programArguments>
            <ruleList>
                <compareText>
                    <logic>equals</logic>
                    <text>${database}</text>
                    <value>mysql</value>
                </compareText>
            </ruleList>
        </runProgram>
        <runProgram>
            <program>${installdir}\deploy_application_remote_database.bat</program>
            <programArguments>"${installdir}" "${databaseUsername}" "${databasePassword}" "${databaseName}" "${databaseHost}" "${databasePort}"</programArguments>
            <ruleList>
                <compareText>
                    <logic>equals</logic>
                    <text>${database}</text>
                    <value>none</value>
                </compareText>
            </ruleList>
        </runProgram>
        <copyFile>
            <destination>${installdir}/tomcat/webapps/abicloud_server/WEB-INF/classes/conf/abi.config.xml</destination>
            <origin>${installdir}/template/abi.config.xml</origin>
        </copyFile>
        <copyFile>
            <destination>${installdir}/tomcat/webapps/abicloud/config/client-config.xml</destination>
            <origin>${installdir}/template/client-config.xml</origin>
        </copyFile>
        <copyFile>
            <destination>${installdir}/tomcat/conf/server.xml</destination>
            <origin>${installdir}/template/server-windows.xml</origin>
        </copyFile>
        <copyFile>
            <destination>${installdir}/tomcat/conf/tomcat-users.xml</destination>
            <origin>${installdir}/template/tomcat-users-windows.xml</origin>
        </copyFile>
    </postInstallationActionList>
    <enableRollback>1</enableRollback>
    <enableTimestamp>1</enableTimestamp>
    <vendor>Abiquo</vendor>
    <componentList>
        <component>
            <name>default</name>
            <description>Default Component</description>
            <canBeEdited>1</canBeEdited>
            <selected>1</selected>
            <show>1</show>
            <folderList>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfiles</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionDirectory>
                            <origin>../../../../opt/application</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>template</origin>
                        </distributionDirectory>
                    </distributionFileList>
                    <shortcutList>
                        <shortcut>
                            <comment>Uninstall</comment>
                            <exec>${installdir}/${uninstallerName}</exec>
                            <icon></icon>
                            <name>Uninstall ${product_fullname}</name>
                            <path>${installdir}</path>
                            <platforms>all</platforms>
                            <runInTerminal>0</runInTerminal>
                            <windowsExec>${installdir}/${uninstallerName}.exe</windowsExec>
                            <windowsExecArgs></windowsExecArgs>
                            <windowsIcon></windowsIcon>
                            <windowsPath>${installdir}</windowsPath>
                        </shortcut>
                    </shortcutList>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfileslinux</name>
                    <platforms>linux</platforms>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfileswindows</name>
                    <platforms>windows</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>bin/run.bat</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>bin/install_mysql.bat</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>bin/install_tomcat.bat</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>bin/deploy_application.bat</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>bin/deploy_application_remote_database.bat</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>bin/stop.bat</origin>
                        </distributionFile>
                        <distributionDirectory>
                            <origin>bin/unzip-win</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>bin/wget-win</origin>
                        </distributionDirectory>
                        <distributionFile>
                            <origin>kinton.sql</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>bin/mysql.exe</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
            </folderList>
            <startMenuShortcutList>
                <startMenuShortcut>
                    <comment>Run ${product_fullname}</comment>
                    <name>Run ${product_fullname}</name>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/run.bat</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath>${installdir}/</windowsPath>
                </startMenuShortcut>
                <startMenuShortcut>
                    <comment>Stop ${product_fullname}</comment>
                    <name>Stop ${product_fullname}</name>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/stop.bat</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath>${installdir}/</windowsPath>
                </startMenuShortcut>
                <startMenuShortcut>
                    <comment>Uninstall ${product_fullname}</comment>
                    <name>Uninstall ${product_fullname}</name>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/${uninstallerName}.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath>${installdir}/</windowsPath>
                </startMenuShortcut>
            </startMenuShortcutList>
        </component>
    </componentList>
    <parameterList>
        <directoryParameter>
            <name>installdir</name>
            <description>Installer.Parameter.installdir.description</description>
            <explanation>Installer.Parameter.installdir.explanation</explanation>
            <value>${platform_install_prefix}/${product_shortname}-${product_version}</value>
            <default>${platform_install_prefix}/${product_shortname}-${product_version}</default>
            <allowEmptyValue>0</allowEmptyValue>
            <ask>yes</ask>
            <cliOptionName>prefix</cliOptionName>
            <mustBeWritable>yes</mustBeWritable>
            <mustExist>0</mustExist>
            <width>40</width>
        </directoryParameter>
        <choiceParameter>
            <name>database</name>
            <title>Database System</title>
            <description>Which database system do you want to install?</description>
            <explanation>Database system used.</explanation>
            <value></value>
            <default>mysql</default>
            <allowEmptyValue>1</allowEmptyValue>
            <displayType>combobox</displayType>
            <width>30</width>
            <optionList>
                <option>
                    <description></description>
                    <image></image>
                    <text>Mysql</text>
                    <value>mysql</value>
                </option>
                <option>
                    <description></description>
                    <image></image>
                    <text>None</text>
                    <value>none</value>
                </option>
            </optionList>
        </choiceParameter>
        <parameterGroup>
            <name>databaseParameters</name>
            <explanation>Please enter the parameters for your database connection.</explanation>
            <value></value>
            <default></default>
            <parameterList>
                <stringParameter>
                    <name>databaseHost</name>
                    <title>Database address</title>
                    <description>IP or hostname of the database</description>
                    <explanation></explanation>
                    <value>localhost</value>
                    <default>localhost</default>
                    <allowEmptyValue>0</allowEmptyValue>
                    <width>30</width>
                </stringParameter>
                <stringParameter>
                    <name>databasePort</name>
                    <title>Database port</title>
                    <description>Port of the database</description>
                    <explanation></explanation>
                    <value>3306</value>
                    <default>3306</default>
                    <allowEmptyValue>0</allowEmptyValue>
                    <width>30</width>
                </stringParameter>
                <stringParameter>
                    <name>databaseUsername</name>
                    <title>Database username</title>
                    <description>Username of the database</description>
                    <explanation></explanation>
                    <value></value>
                    <default></default>
                    <allowEmptyValue>0</allowEmptyValue>
                    <width>30</width>
                </stringParameter>
                <passwordParameter>
                    <name>databasePassword</name>
                    <title>Database password</title>
                    <description>Password of the database</description>
                    <explanation></explanation>
                    <value></value>
                    <default></default>
                    <allowEmptyValue>0</allowEmptyValue>
                    <ask>yes</ask>
                    <descriptionRetype>Retype the password</descriptionRetype>
                    <width>40</width>
                </passwordParameter>
            </parameterList>
            <ruleList>
                <compareText>
                    <logic>equals</logic>
                    <text>${database}</text>
                    <value>none</value>
                </compareText>
            </ruleList>
        </parameterGroup>
        <stringParameter>
            <name>tomcatPort</name>
            <description>Tomcat port</description>
            <explanation>Please enter the port number Tomcat will use.</explanation>
            <value></value>
            <default>5050</default>
            <allowEmptyValue>1</allowEmptyValue>
            <width>40</width>
        </stringParameter>
        <parameterGroup>
            <name>userandpass</name>
            <explanation></explanation>
            <value></value>
            <default></default>
            <parameterList>
                <stringParameter>
                    <name>tomcatUser</name>
                    <description>Tomcat user</description>
                    <explanation>Please enter a user name.</explanation>
                    <value></value>
                    <default>admin</default>
                    <allowEmptyValue>1</allowEmptyValue>
                    <width>40</width>
                </stringParameter>
                <stringParameter>
                    <name>tomcatPassword</name>
                    <description>Tomcat password</description>
                    <explanation>Please enter a password.</explanation>
                    <value></value>
                    <default>admin</default>
                    <allowEmptyValue>1</allowEmptyValue>
                    <width>40</width>
                </stringParameter>
            </parameterList>
        </parameterGroup>
    </parameterList>
</project>

