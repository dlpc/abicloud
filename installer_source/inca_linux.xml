<project>
    <shortName>AbiCloud</shortName>
    <fullName>AbiCloud</fullName>
    <version>0.6.0</version>
    <licenseFile>licence</licenseFile>
    <leftImage>../../abicloud/installer_source/CustomPreloaderLogo.png</leftImage>
    <logoImage>../../abicloud/installer_source/CustomPreloaderLogo.png</logoImage>
    <preInstallationActionList>
        <autodetectJava>
            <promptUser>0</promptUser>
        </autodetectJava>
    </preInstallationActionList>
    <postInstallationActionList>
        <substitute>
            <files>${installdir}/template/server-linux.xml</files>
            <type>regexp</type>
            <substitutionList>
                <substitution>
                    <pattern>##tomcatPort##</pattern>
                    <value>${tomcatPort}</value>
                </substitution>
            </substitutionList>
        </substitute>
        <substitute>
            <files>${installdir}/template/tomcat-users-linux.xml</files>
            <type>regexp</type>
            <substitutionList>
                <substitution>
                    <pattern>##tomcatUser##</pattern>
                    <value>${tomcatUser}</value>
                </substitution>
                <substitution>
                    <pattern>##tomcatPassword##</pattern>
                    <value>${tomcatPassword}</value>
                </substitution>
            </substitutionList>
        </substitute>
        <substitute>
            <files>${installdir}/template/abi.config.xml</files>
            <type>regexp</type>
            <ruleList>
                <compareText>
                    <logic>equals</logic>
                    <text>${database}</text>
                    <value>none</value>
                </compareText>
            </ruleList>
            <substitutionList>
                <substitution>
                    <pattern>##tomcatPort##</pattern>
                    <value>${tomcatPort}</value>
                </substitution>
                <substitution>
                    <pattern>##databaseHost##</pattern>
                    <value>${databaseHost}</value>
                </substitution>
                <substitution>
                    <pattern>##databasePort##</pattern>
                    <value>${databasePort}</value>
                </substitution>
                <substitution>
                    <pattern>##databaseUsername##</pattern>
                    <value>${databaseUsername}</value>
                </substitution>
                <substitution>
                    <pattern>##databasePassword##</pattern>
                    <value>${databasePassword}</value>
                </substitution>
                <substitution>
                    <pattern>##databaseName##</pattern>
                    <value>kinton</value>
                </substitution>
            </substitutionList>
        </substitute>
        <substitute>
            <files>${installdir}/template/abi.config.xml</files>
            <type>regexp</type>
            <ruleList>
                <compareText>
                    <logic>equals</logic>
                    <text>${database}</text>
                    <value>mysql</value>
                </compareText>
            </ruleList>
            <substitutionList>
                <substitution>
                    <pattern>##tomcatPort##</pattern>
                    <value>${tomcatPort}</value>
                </substitution>
                <substitution>
                    <pattern>##databaseHost##</pattern>
                    <value>localhost</value>
                </substitution>
                <substitution>
                    <pattern>##databasePort##</pattern>
                    <value>33060</value>
                </substitution>
                <substitution>
                    <pattern>##databaseUsername##</pattern>
                    <value>root</value>
                </substitution>
                <substitution>
                    <pattern>##databasePassword##</pattern>
                    <value></value>
                </substitution>
                <substitution>
                    <pattern>##databaseName##</pattern>
                    <value>kinton</value>
                </substitution>
            </substitutionList>
        </substitute>
        <substitute>
            <files>${installdir}/template/client-config.xml</files>
            <type>regexp</type>
            <substitutionList>
                <substitution>
                    <pattern>##tomcatPort##</pattern>
                    <value>${tomcatPort}</value>
                </substitution>
            </substitutionList>
        </substitute>
        <runProgram>
            <program>${installdir}/bin/install_mysql.sh</program>
            <programArguments>${installdir}</programArguments>
            <ruleList>
                <compareText>
                    <logic>equals</logic>
                    <text>${database}</text>
                    <value>mysql</value>
                </compareText>
            </ruleList>
        </runProgram>
        <runProgram>
            <program>${installdir}/bin/install_tomcat.sh</program>
            <programArguments>${installdir}</programArguments>
        </runProgram>
        <runProgram>
            <program>${installdir}/bin/deploy_application.sh</program>
            <programArguments>${installdir}</programArguments>
            <ruleList>
                <compareText>
                    <logic>equals</logic>
                    <text>${database}</text>
                    <value>mysql</value>
                </compareText>
            </ruleList>
        </runProgram>
        <runProgram>
            <program>${installdir}/bin/deploy_application_remote_database.sh</program>
            <programArguments>"${installdir}" "${databaseUsername}" "${databasePassword}" "${databaseName}" "${databaseHost}" "${databasePort}"</programArguments>
            <ruleList>
                <compareText>
                    <logic>equals</logic>
                    <text>${database}</text>
                    <value>none</value>
                </compareText>
            </ruleList>
        </runProgram>
        <copyFile>
            <destination>${installdir}/tomcat/webapps/abicloud_server/WEB-INF/classes/conf/abi.config.xml</destination>
            <origin>${installdir}/template/abi.config.xml</origin>
        </copyFile>
        <copyFile>
            <destination>${installdir}/tomcat/webapps/abicloud/config/client-config.xml</destination>
            <origin>${installdir}/template/client-config.xml</origin>
        </copyFile>
        <copyFile>
            <destination>${installdir}/tomcat/conf/server.xml</destination>
            <origin>${installdir}/template/server-linux.xml</origin>
        </copyFile>
        <copyFile>
            <destination>${installdir}/tomcat/conf/tomcat-users.xml</destination>
            <origin>${installdir}/template/tomcat-users-linux.xml</origin>
        </copyFile>
    </postInstallationActionList>
    <enableRollback>1</enableRollback>
    <enableTimestamp>1</enableTimestamp>
    <projectSchemaVersion>1.0</projectSchemaVersion>
    <vendor>Abiquo</vendor>
    <componentList>
        <component>
            <name>default</name>
            <description>Default Component</description>
            <canBeEdited>1</canBeEdited>
            <selected>1</selected>
            <show>1</show>
            <desktopShortcutList>
                <shortcut>
                    <comment>Demo Application</comment>
                    <exec>${installdir}/bin/demo.sh</exec>
                    <icon>${installdir}/bin/logo.png</icon>
                    <name>Demo Project</name>
                    <path></path>
                    <platforms>all</platforms>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/bin/demo.bat</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon>${installdir}/bin/logo.ico</windowsIcon>
                    <windowsPath></windowsPath>
                </shortcut>
            </desktopShortcutList>
            <folderList>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfiles</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>kinton.sql</origin>
                        </distributionFile>
                        <distributionDirectory>
                            <origin>template</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>../../../../opt/application</origin>
                        </distributionDirectory>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}/bin</destination>
                    <name>programfileswin</name>
                    <platforms>windows</platforms>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}/bin</destination>
                    <name>programfilesunix</name>
                    <platforms>linux linux-x64 linux-ia64 osx solaris-sparc solaris-intel linux-ppc linux-s390 freebsd freebsd4 freebsd6 freebsd6-x64 openbsd3 hpux aix irix-n32</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>bin/install_mysql.sh</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>bin/deploy_application.sh</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>bin/install_tomcat.sh</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>bin/deploy_application_remote_database.sh</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>bin/run.sh</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>bin/stop.sh</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>bin/mysql</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
            </folderList>
            <startMenuShortcutList>
                <startMenuShortcut>
                    <comment>Demo Application</comment>
                    <name>Demo Application</name>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/bin/demo.bat</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon>${installdir}/bin/logo.ico</windowsIcon>
                    <windowsPath></windowsPath>
                </startMenuShortcut>
                <startMenuShortcut>
                    <comment>Uninstall Demo Project</comment>
                    <name>Uninstall Demo Project</name>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/uninstall.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon>${installdir}/uninstall.exe</windowsIcon>
                    <windowsPath></windowsPath>
                </startMenuShortcut>
            </startMenuShortcutList>
        </component>
    </componentList>
    <parameterList>
        <directoryParameter>
            <name>installdir</name>
            <description>Installer.Parameter.installdir.description</description>
            <explanation>Installer.Parameter.installdir.explanation</explanation>
            <value>${platform_install_prefix}/${product_shortname}-${product_version}</value>
            <default>${platform_install_prefix}/${product_shortname}-${product_version}</default>
            <allowEmptyValue>0</allowEmptyValue>
            <ask>yes</ask>
            <cliOptionName>prefix</cliOptionName>
            <mustBeWritable>yes</mustBeWritable>
            <mustExist>0</mustExist>
            <width>30</width>
        </directoryParameter>
        <choiceParameter>
            <name>database</name>
            <title>Database System</title>
            <description>Which database system do you want to install?</description>
            <explanation>Database system used.</explanation>
            <value></value>
            <default>mysql</default>
            <allowEmptyValue>1</allowEmptyValue>
            <displayType>combobox</displayType>
            <width>30</width>
            <optionList>
                <option>
                    <description></description>
                    <image></image>
                    <text>Mysql</text>
                    <value>mysql</value>
                </option>
                <option>
                    <description></description>
                    <image></image>
                    <text>None</text>
                    <value>none</value>
                </option>
            </optionList>
        </choiceParameter>
        <parameterGroup>
            <name>databaseParameters</name>
            <explanation>Please enter the parameters for your database connection.</explanation>
            <value></value>
            <default></default>
            <parameterList>
                <stringParameter>
                    <name>databaseHost</name>
                    <title>Database address</title>
                    <description>IP or hostname of the database</description>
                    <explanation></explanation>
                    <value>localhost</value>
                    <default>localhost</default>
                    <allowEmptyValue>0</allowEmptyValue>
                    <width>30</width>
                </stringParameter>
                <stringParameter>
                    <name>databasePort</name>
                    <title>Database port</title>
                    <description>Port of the database</description>
                    <explanation></explanation>
                    <value>3306</value>
                    <default>3306</default>
                    <allowEmptyValue>0</allowEmptyValue>
                    <width>30</width>
                </stringParameter>
                <stringParameter>
                    <name>databaseUsername</name>
                    <title>Database username</title>
                    <description>Username of the database</description>
                    <explanation></explanation>
                    <value></value>
                    <default></default>
                    <allowEmptyValue>0</allowEmptyValue>
                    <width>30</width>
                </stringParameter>
                <passwordParameter>
                    <name>databasePassword</name>
                    <title>Database password</title>
                    <description>Password of the database</description>
                    <explanation></explanation>
                    <value></value>
                    <default></default>
                    <allowEmptyValue>1</allowEmptyValue>
                    <ask>yes</ask>
                    <descriptionRetype>Retype the password</descriptionRetype>
                    <width>40</width>
                </passwordParameter>
            </parameterList>
            <ruleList>
                <compareText>
                    <logic>equals</logic>
                    <text>${database}</text>
                    <value>none</value>
                </compareText>
            </ruleList>
        </parameterGroup>
        <stringParameter>
            <name>tomcatPort</name>
            <description>Tomcat port</description>
            <explanation>Please enter the port number Tomcat will use.</explanation>
            <value></value>
            <default>5050</default>
            <allowEmptyValue>1</allowEmptyValue>
            <width>40</width>
        </stringParameter>
        <parameterGroup>
            <name>userandpass</name>
            <explanation></explanation>
            <value></value>
            <default></default>
            <parameterList>
                <stringParameter>
                    <name>tomcatUser</name>
                    <description>Tomcat user</description>
                    <explanation>Please enter a user name.</explanation>
                    <value></value>
                    <default>admin</default>
                    <allowEmptyValue>1</allowEmptyValue>
                    <width>40</width>
                </stringParameter>
                <stringParameter>
                    <name>tomcatPassword</name>
                    <description>Tomcat password</description>
                    <explanation>Please enter a password.</explanation>
                    <value></value>
                    <default>admin</default>
                    <allowEmptyValue>1</allowEmptyValue>
                    <width>40</width>
                </stringParameter>
            </parameterList>
        </parameterGroup>
    </parameterList>
    <platformOptionsList>
        <platformOptions>
            <postInstallationScript>${installdir}\bin\postinstallation.bat</postInstallationScript>
            <postInstallationScriptArguments>${installdir.dos}</postInstallationScriptArguments>
            <platform>windows</platform>
        </platformOptions>
    </platformOptionsList>
</project>

